<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llMonthCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMonthCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vip.frendy.calendars.month.MonthCalendarView
            android:id="@+id/mcvCalendar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/month_calendar_height_min"
            android:overScrollMode="never"
            android:background="@android:color/white"
            app:month_day_text_size="@integer/calendar_text_size_type_2"
            app:month_holiday_color="@color/holiday_text_color"
            app:month_last_or_next_month_text_color="@android:color/darker_gray"
            app:month_normal_text_color="@color/colorPrimaryDark"
            app:month_weekend_text_color="@color/colorPrimaryDark"
            app:month_selected_circle_color="@color/colorAccent"
            app:month_selected_circle_today_color="@color/colorAccent"
            app:month_today_text_color="@color/colorAccent"
            app:month_show_holiday_hint="true"
            app:month_show_lunar="false"
            app:month_show_task_hint="true"/>
    </RelativeLayout>
</LinearLayout>